{
    "name": "Tauri + Svelte Dev Environment",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings":{
					"terminal.integrated.shell.linux": "/bin/bash",
					"lldb.executable": "/usr/bin/lldb"
			},
            "extensions": [
                "rust-lang.rust-analyzer",
                "dbaeumer.vscode-eslint",
                "vadimcn.vscode-lldb",
                "svelte.svelte-vscode",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    },
    "forwardPorts": [3000, 5000, 5173, 8080],
    "postCreateCommand": "npm install --prefix ./svelte && cargo build --manifest-path ./src-tauri/Cargo.toml || true",
    "remoteUser": "vscode"
} 